</gazebo>

<gazebo reference="right_wheel_1">
  <material>${tyre_color}</material>
</gazebo>

<gazebo reference="bottom_panel_1">
  <material>${body_color}</material>
</gazebo>

<gazebo reference="circuit_panel_1">
  <material>${body_color}</material>
</gazebo>

<gazebo reference="circuit_housing_1">
  <material>${body_color}</material>
</gazebo>

<gazebo reference="stand_1">
  <material>${frame_color}</material>
</gazebo>

<gazebo reference="body_1">
  <material>${body_color}</material>
</gazebo>

<gazebo reference="lidar_1">
  <material>${accessory_color}</material>
</gazebo>

<gazebo reference="top_panel_1">
  <material>${body_color}</material>
</gazebo>

<gazebo reference="realsense_housing_1">
  <material>${body_color}</material>
</gazebo>

<gazebo reference="left_realsense_1">
  <material>${accessory_color}</material>
</gazebo>

<gazebo reference="right_realsense_1">
  <material>${accessory_color}</material>
</gazebo>

<gazebo reference="sonar_1">

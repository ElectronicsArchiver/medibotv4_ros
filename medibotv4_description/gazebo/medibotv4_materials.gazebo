</gazebo>

<gazebo reference="camera_housing_1">
  <material>${body_color}</material>
</gazebo>

<gazebo reference="camera_1">
  <material>${accessory_color}</material>
</gazebo>

<gazebo reference="caster_1">
  <material>${tyre_color}</material>
</gazebo>

</robot>
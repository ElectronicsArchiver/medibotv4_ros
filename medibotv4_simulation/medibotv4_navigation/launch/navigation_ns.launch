<launch>
  <!-- Arguments -->
  <arg name="first_robot"  default="robot1"/>
  <arg name="second_robot" default="robot2"/>
  <arg name="third_robot" default="robot3"/>
  <arg name="open_rviz"  default="true"/>
  <arg name="move_forward_only" default="false"/>
  <arg name="map_file" default="$(find medibotv4_navigation)/maps/empty_hospital.yaml"/>
  <param name="robot_description" command="$(find xacro)/xacro $(find medibotv4_description)/urdf/medibotv4.xacro" />

  <!-- Map server -->
  <node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)"/>

  <group ns = "$(arg first_robot)">
    <!--robot_state_publisher, publishing state of robot to tf-->
    <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher" output="screen">
      <param name="publish_frequency" type="double" value="50.0" />
      <param name="tf_prefix" value="$(arg first_robot)" />
    </node>

    <!-- AMCL -->
    <include file="$(find medibotv4_navigation)/launch/amcl_ns.launch">
      <arg name="robot_namespace" value="$(arg first_robot)"/>
      <arg name="initial_pose_x" value="0.0"/>
      <arg name="initial_pose_y" default="10.0"/>
      <arg name="initial_pose_a" default="-1.57"/>
    </include>

    <!--move_base-->
    <include file="$(find medibotv4_navigation)/launch/move_base_ns.launch">
      <arg name="robot_namespace" value="$(arg first_robot)"/>
      <arg name="move_forward_only" value="$(arg move_forward_only)"/>
    </include>
  </group>

  <group ns = "$(arg second_robot)">
    <!--robot_state_publisher, publishing state of robot to tf-->
    <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher" output="screen">
      <param name="publish_frequency" type="double" value="50.0" />
      <param name="tf_prefix" value="$(arg second_robot)" />
    </node>

    <!-- AMCL -->
    <include file="$(find medibotv4_navigation)/launch/amcl_ns.launch">
      <arg name="robot_namespace" value="$(arg second_robot)"/>
      <arg name="initial_pose_x" value="5.0"/>
      <arg name="initial_pose_y" default="10.0"/>
      <arg name="initial_pose_a" default="-1.57"/>
    </include>

    <!--move_base-->
    <include file="$(find medibotv4_navigation)/launch/move_base_ns.launch">
      <arg name="robot_namespace" value="$(arg second_robot)"/>
      <arg name="move_forward_only" value="$(arg move_forward_only)"/>
    </include>
  </group>

  <group ns = "$(arg third_robot)">
    <!--robot_state_publisher, publishing state of robot to tf-->
    <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher" output="screen">
      <param name="publish_frequency" type="double" value="50.0" />
      <param name="tf_prefix" value="$(arg third_robot)" />
    </node>

    <!-- AMCL -->
    <include file="$(find medibotv4_navigation)/launch/amcl_ns.launch">
      <arg name="robot_namespace" value="$(arg third_robot)"/>
      <arg name="initial_pose_x" value="-5.0"/>
      <arg name="initial_pose_y" default="10.0"/>
      <arg name="initial_pose_a" default="-1.57"/>
    </include>

    <!--move_base-->
    <include file="$(find medibotv4_navigation)/launch/move_base_ns.launch">
      <arg name="robot_namespace" value="$(arg third_robot)"/>
      <arg name="move_forward_only" value="$(arg move_forward_only)"/>
    </include>
  </group>

  <group if="$(arg open_rviz)"> 
    <node pkg="rviz" type="rviz" name="rviz" required="true"
          args="-d $(find medibotv4_description)/launch/multirobot_urdf.rviz"/>
  </group>

</launch>